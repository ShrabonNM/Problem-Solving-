#include <stdio.h>
 
int main() {
    int T;
    scanf("%d", &T);
    while (T--) {
        int n;
        scanf("%d", &n);
        int a[n], maxVal = 0;
        for (int i = 0; i < n; i++) {
            scanf("%d", &a[i]);
            if (a[i] > maxVal)
            {
                maxVal = a[i];
            }
        }
 
        int fr[maxVal + 1];
        for (int i = 0; i <= maxVal; i++) {
            fr[i] = 0;
        }
 
        for (int i = 0; i < n; i++) {
            fr[a[i]]++;
        }
 
        int cnt = 0;
        for (int i = 0; i <= maxVal; i++) {
            cnt += fr[i] / 2;  
        }
 
        printf("%d\n", cnt);
    }
    return 0;
}
